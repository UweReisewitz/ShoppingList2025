@page "/StoreEdit"
@using MudBlazor
@using ShoppingList2025.Core.UI.Blazor
@using ShoppingList2025.Database.Types

@namespace ShoppingList2025.Shared

@inherits BlazorViewBase<IStoreEditViewModel>

<MudPaper class="align-end" Elevation="25">
    <MudToolBar>
        <MudIconButton Icon="@Icons.Material.Outlined.ArrowBack" OnClick="this.ViewModel.GotoListPageAsync" />
    </MudToolBar>
</MudPaper>

<MudGrid Class="ma-4">
    <MudItem xs="12" md="12">
        <MudTextField T="string"
                      Label="Name"
                      @bind-Value="this.ViewModel.Name"
                      Immediate="true" />
    </MudItem>
    <MudItem xs="12" md="12">
        <MudTextField T="string"
                      Label="Adresse"
                      @bind-Value="this.ViewModel.Address"
                      Immediate="true" />
    </MudItem>
</MudGrid>
